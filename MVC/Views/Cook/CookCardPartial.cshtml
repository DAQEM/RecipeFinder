@model MVC.Models.Cook.CookModel

@{
    string username = "@" + Model.Cook.Username;
}

<div class="flex bg-white jcenter b-radius" style="margin: 10px; width: 360px; box-shadow: 0 1px 2px rgba(0, 0, 0, 0.2)">
    <a href="/Cook/@Model.Cook.Username" style="color: inherit; text-decoration: none; width: 100%">
        <div class="flex center column p-3">
            <img class="m-2" src="@Model.Cook.ImageUrl" style="width: 80px; height: 80px; border-radius: 50%" alt="@Model.Cook.Fullname image"/>
            <h1 class="text-l m-0">@Model.Cook.Fullname</h1>
            <p class="text-s opacity-50 m-0">@username</p>
            <button class="button m-3" type="reset">Follow</button>
        </div>
    </a>
</div>