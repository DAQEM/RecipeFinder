@model MVC.Models.Cook.CookModel

<div class="flex jcenter" style="margin: 10px 0">
    <a href="/Cook/@Model.Cook.Username" style="color: inherit; text-decoration: none; width: 100%">
        <div class="flex bg-white b-radius" style="padding: 8px; box-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);">
            <img src="@Model.Cook.ImageUrl" style="width: 60px; height: 60px; border-radius: 50%" alt="@Model.Cook.Fullname image"/>
            <div class="flex justify-content-between mx-2" style="width: 100%">
                <div>
                    <h1 class="text-l m-0">@Model.Cook.Fullname</h1>
                    @{
                        string username = "@" + Model.Cook.Username;
                    }
                    <p class="text-s opacity-50 m-0">@username</p>
                </div>
                <div class="flex center">
                    <button class="button">Follow</button>
                </div>
            </div>
        </div>
    </a>
</div>