@model MVC.Models.Cook.ChangePasswordModel

<section class="flex center column" style="margin-top: 50px">
    <div style="width: 400px">
        @if (ViewBag.ErrorMessages != null)
        {
            @foreach (string error in ViewBag.ErrorMessages)
            {
                <div class="alert alert-danger" style="padding: 1rem 40px">
                    @error
                </div>
            }
        }
        @if(ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success" style="padding: 1rem 40px">
                @ViewBag.SuccessMessage
            </div>
        }
        <form method="post" class="flex column">
            <h1 class="text-white text-xl">Change your password</h1>
            @Html.HiddenFor(model => model.Username)
            <label>Old password</label>
            @Html.PasswordFor(model => model.OldPassword, new { placeholder = "\uF084 Old Password", required = true, oninvalid = "this.setCustomValidity('Please enter your current password.')" })
            <label>New password</label>
            @Html.PasswordFor(model => model.NewPassword, new { placeholder = "\uF084 New password", required = true, oninvalid = "this.setCustomValidity('Please enter your new password.')" })
            <label>Confirm new password</label>
            @Html.PasswordFor(model => model.ConfirmNewPassword, new { placeholder = "\uF084 Confirm new password", required = true, oninvalid = "this.setCustomValidity('Please enter your new password again for confirmation.')" })
            <button type="submit" class="button" style="margin-top: 16px">Change Password</button>
        </form>
    </div>
</section>